<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Living Expenses</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/living-expenses.css">
</head>

<body class="d-flex flex-column vh-100 bg-secondary-subtle"></body>
<%- include('../partials/navbar') %>
    <main class="container my-5">
        <div class="row">
            <div class="col-lg-6 col-sm-10 offset-lg-0 offset-sm-1">
                <div class="card shadow mb-3 text-white" id="totalCard">
                    <div class="card-body">
                        <h2 class="card-title border-bottom pb-3 month">Living Expenses</h2>
                        <h3 class="card-text mb-3">
                            <% let rentTotal=0; %>
                                <% for(let rentItem of rentItems) {%>
                                    <%rentTotal +=rentItem.cost %>
                                        <% } %>
                                            Total: $<%=rentTotal %>
                        </h3>

                        <div class="accordion" id="accordionExample">
                            <% if(rentItems) { %>
                                <% for(let rentItem of rentItems) {%>
                                    <div class="accordion-item">
                                        <h2 class="accordion-header">
                                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                                data-bs-target="#collapse<%=rentItem._id %>" aria-expanded="true"
                                                aria-controls="collapse<%=rentItem._id %>">
                                                <h5>
                                                    <%=rentItem.reason%>: $<%=rentItem.cost %>
                                                </h5>
                                            </button>
                                        </h2>
                                        <div id="collapse<%=rentItem._id %>" class="accordion-collapse collapse"
                                            data-bs-parent="#accordionExample">
                                            <div class="accordion-body">
                                                <p><%=rentItem.date %></p>
                                                    <p><%=rentItem.desc %></p>
                                            </div>
                                        </div>
                                    </div>
                                    <% } %>
                                        <% } %>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 col-sm-10 offset-lg-0 offset-sm-1">
                <div class="card shadow mb-3 text-white" id="inputCard">
                    <div class="card-body">
                        <h2 class="card-title border-bottom pb-3">Add New Expense</h2>
                    </div>
                    <form action="/living-expenses" method="post" class="px-3 pb-3 validated-form" novalidate>
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="reason" aria-describedby="cost reason"
                                placeholder="Cost Reason" name="rentItem[reason]" required>
                            <label for="reason" class="form-label text-secondary">Cost Reason</label>
                            <div id="reasonHelp" class="form-text text-info">Examples: Power Bill, Internet
                                Bill, etc</div>
                            <div class="invalid-feedback">Please Enter a Reason!</div>
                        </div>

                        <div class="form-floating mb-3">
                            <input type="number" class="form-control" id="costAmount" aria-describedby="Dollar amount"
                                placeholder="Dollar Amount" name="rentItem[cost]" required>
                            <label for="costAmount" class="form-label text-secondary">Dollar Amount</label>
                            <div class="invalid-feedback">Please Enter a Cost</div>
                        </div>

                        <div class="form-floating mb-3">
                            <textarea class="form-control" id="costDescription" rows="3" name="rentItem[desc]"
                                placeholder="Description of Expense" style="height: 7rem;" required></textarea>
                            <label for="costDescription" class="form-label text-secondary">Description of
                                Expense</label>
                        </div>
                        <div class="invalid-feedback">Please Enter a Description!</div>
                        <div>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12 col-sm-10 offset-lg-0 offset-sm-1">
                <div class="card shadow text-white mt-2" id="historyCard">
                    <div class="card-body ">
                        <h2 class="card-title border-bottom pb-2 mb-3">Previous Month Summeries</h2>
                        <div class="accordion " id="accordion">
                            <% let pastRentTotal=0; %>
                                <% for(let rentMonth of rentMonths.reverse().slice(1)) {%>
                                    <div class="accordion-item bg-secondary-subtle">
                                        <h2 class="accordion-header">
                                            <button class="accordion-button collapsed" type="button"
                                                data-bs-toggle="collapse"
                                                data-bs-target="#flush-collapse<%=rentMonth.month %>"
                                                aria-expanded="false"
                                                aria-controls="flush-collapse<%=rentMonth.month %>">
                                                <h3>
                                                    <%=rentMonth.month %>
                                                </h3>
                                            </button>
                                        </h2>
                                        <div id="flush-collapse<%=rentMonth.month %>"
                                            class="accordion-collapse collapse" data-bs-parent="#accordion">
                                            <div class="accordion-body">
                                                <% for(let rentItem of rentMonth.rentItems) {%>
                                                    <%pastRentTotal +=rentItem.cost %>
                                                        <% } %>
                                                            <h4 class="border-bottom pb-3">
                                                                Total: $<%=pastRentTotal %>
                                                            </h4>
                                                            <% for(let rentItem of rentMonth.rentItems) {%>
                                                                <h5 class="d-inline">
                                                                    <%=rentItem.reason %>: $<%=rentItem.cost %>
                                                                </h5>
                                                                <br>
                                                                <p class="rentDesc">
                                                                    <%=rentItem.desc %>
                                                                </p>
                                                                <% } %>
                                            </div>
                                        </div>
                                    </div>
                                    <% } %>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </main>
    <%- include('../partials/footer') %>
        <script src="/js/validateForms.js"></script>
        <script src="/js/home.js"></script>
        </body>

</html>