<% layout('layouts/boilerplate') %>
  <div class="row">
    <div class="col-md-6 offset-md-3 col-xl-6 offset-xl-3">
      <div class="card shadow p-1 text-white" id="register">
        <img
          src="https://images.unsplash.com/photo-1571863533956-01c88e79957e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1267&q=80"
          alt="" class="card-img-top" />
        <div class="card-body">
          <h4 class="card-title mb-3">Register</h4>
          <form action="/register" method="POST" class="row g-3 validated-form" novalidate>
            <div class="col-md-6">
              <label for="inputEmail4" class="form-label">Email</label>
              <input type="email" class="form-control" id="inputEmail4" name="email">
            </div>
            <div class="col-md-6">
              <label class="form-label" for="username">Username</label>
              <input class="form-control" type="text" id="username" name="username" required autofocus>
              <div class="valid-feedback">
                Looks good!
              </div>
            </div>
            <div class="col-md-6">
              <label for="inputPassword4" class="form-label">Password</label>
              <input type="password" class="form-control" id="inputPassword4" name="password">
            </div>
            <div class="col-md-6">
              <label for="vertifyPassword" class="form-label">Verify Password</label>
              <input type="password" class="form-control" id="vertifyPassword" name="verifiedPassword">
            </div>
            <div class="col-12 justify-content-end">
              <button class="btn btn-success btn-block mb-3 mt-3">Sign up</button>
            </div>
            <p class="pb-0 mb-0">Already have an account? <a href="/login">Login instead</a></p>
          </form>
        </div>
      </div>
    </div>
  </div>
  <script src="/js/register.js"></script>