<% layout('layouts/boilerplate') %>
    <section class="row d-flex">
        <div class="text-center text-white" id="headers">
            <h1 class="display-1" id="header1">Hello, <%=user.username%>. </h1>
            <h2 class="display-2" id="header2">Let's get to work making your new Household!</h2>
        </div>
        <div class="card col-8 offset-2" id="newHousehold">
            <div class="card-body text-white">
                <form action="/household" method="post" class="row g-3 validated-form" novalidate>
                    <h3 class="card-item text-center">What do you want to call your Household? You can change this later.</h3>                    
                    <div class="col-xl-6 offset-xl-3 mb-3">
                        <label for="name" class="form-label">Household Name</label>
                        <input type="text" class="form-control" id="name" placeholder="Home" value="Home"
                            name="household[name]">
                    </div>
                    <h4 class="card-item text-center">What is the address of your Household?</h4>
                    <div class="col-xl-7">
                        <label for="inputAddress" class="form-label">Address</label>
                        <input type="text" class="form-control" id="inputAddress" placeholder="1234 Main St"
                            name="address[street]" required>
                    </div>
                    <div class="col-xl-5">
                        <label for="inputAddress2" class="form-label">Address 2</label>
                        <input type="text" class="form-control" id="inputAddress2"
                            placeholder="Apartment, studio, or floor" name="address[street2]">
                    </div>
                    <div class="col-md-6">
                        <label for="inputCity" class="form-label">City</label>
                        <input type="text" class="form-control" id="inputCity" name="address[city]" required>
                        <div class="invalid-feedback">Please Enter a City!</div>
                    </div>
                    <div class="col-md-4">
                        <label for="inputState" class="form-label">State</label>
                        <select id="inputState" class="form-select" name="address[state]" required>
                            <option value="">Choose Your State</option>
                        </select>
                        <div class="invalid-feedback">Please Select a State!</div>
                    </div>
                    <div class="col-md-2">
                        <label for="inputZip" class="form-label">Zip</label>
                        <input type="text" class="form-control" id="inputZip" name="address[zipcode]" required>
                        <div class="invalid-feedback">Please Enter a Zipcode</div>
                    </div>
                    <div class="col-12 justify-content-end">
                        <button type="submit" class="btn btn-success btn-block mb-3 mt-3">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </section>

    <script src="/js/household_new.js"></script>
    <script src="/js/states.js"></script>