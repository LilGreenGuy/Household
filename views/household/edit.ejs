<% layout('layouts/boilerplate') %>
    <section class="row d-flex">
        <div class="card bodyCard col-8 offset-2">
            <div class="card-body text-white">
                <form action="/household/<%=household.id %>?_method=PUT" method="post" class="row g-3 validated-form mb-3" novalidate>
                    <h1 class="card-title text-center border-bottom pb-3 mx-1">Edit Household</h1>
                    <div class="col-xl-6 offset-xl-3 mb-3">
                        <label for="name" class="form-label text-secondary fs-4">Household Name</label>
                        <div id="householdName" class="row">
                            <p class="col-9 my-auto">
                                <%= household.name || "" %>
                            </p>
                            <div class="col-3">
                                <button id="editNameBtn" type="button"
                                    class="ms-auto d-block btn btn-secondary">Edit</button>
                            </div>
                        </div>

                        <input type="text" class="form-control d-none" id="name" placeholder="Home"
                            value="<%= household.name || "" %>" name="household[name]">
                        <button id="submitNameBtn" type="submit"
                            class="mx-auto mt-3 d-block btn btn-success d-none">Submit</button>
                    </div> 
                </form>
                <!--  -->
                <form action="/household/<%=household.id %>?_method=PUT" method="post" class="row g-3 validated-form" novalidate>
                    <div class="col-xl-7">
                        <label for="inputAddress" class="form-label text-secondary fs-4">Address</label>
                        <p class="editAddressHeader">
                            <%= household.address.street || "" %>
                        </p>
                        <input type="text" class="form-control d-none" id="inputAddress" placeholder="1234 Main St"
                            value="<%= household.address.street || "" %>" name="address[street]">
                    </div>
                    <div class="col-xl-5">
                        <label for="inputAddress2" class="form-label text-secondary fs-4">Address 2</label>
                        <p class="editAddressHeader">
                            <%= household.address.street2 || "" %>
                        </p>
                        <input type="text" class="form-control d-none" id="inputAddress2"
                            value="<%= household.address.street2 || "" %>" placeholder="Apartment, studio, or floor"
                            name="address[street2]">
                    </div>
                    <div class="col-md-6">
                        <label for="inputCity" class="form-label text-secondary fs-4">City</label>
                        <p class="editAddressHeader">
                            <%= household.address.city || "" %>
                        </p>
                        <input type="text" class="form-control d-none" id="inputCity" name="address[city]"
                            value="<%= household.address.city || "" %>">
                        <div class="invalid-feedback">Please Enter a City!</div>
                    </div>
                    <div class="col-md-4">
                        <label for="inputState" class="form-label text-secondary fs-4">State</label>
                        <p class="editAddressHeader">
                            <%= household.address.state || "" %>
                        </p>
                        <select id="inputState" class="form-select d-none" name="address[state]">
                            <option value="">Choose Your State</option>
                        </select>
                        <div class="invalid-feedback">Please Select a State!</div>
                    </div>

                    <div class="col-md-2">
                        <label for="inputZip" class="form-label text-secondary fs-4">Zip</label>
                        <p class="editAddressHeader">
                            <%= household.address.zipcode || "" %>
                        </p>
                        <input type="text" class="form-control d-none" id="inputZip" name="address[zipcode]"
                            value="<%= household.address.zipcode || "" %>">
                    </div>
                    <div class="invalid-feedback">Please Enter a Zipcode</div>
            </div>
            <div class="col-12">
                <button type="button" id="editAddressBtn" class="btn btn-secondary btn-block mb-3 d-block ms-auto">Edit
                    Address</button>
                <button type="submit" id="submitAddressBtn"
                    class="btn btn-primary btn-block mb-3 d-block ms-auto d-none">Submit Address</button>
            </div>
            </form>
        </div>
    </section>

    <script src="/js/household_edit.js"></script>
    <script src="/js/states.js"></script>